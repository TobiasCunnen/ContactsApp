<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/profilePicture"
            >

            <ImageView
                android:id="@+id/profilePicture"
                android:contentDescription="@string/profilePicture"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:src="@drawable/ic_person_blue_24dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_toEndOf="@+id/profilePicture">

                <ImageView
                    android:contentDescription="@string/profilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_person_grey_24dp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/contactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <ImageView
                    android:contentDescription="@string/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_phone_grey_24dp"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/contactEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <ImageView
                    android:contentDescription="@string/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_mail_grey_24dp"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/contactPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_row="2"
                    android:layout_column="1"/>
            </GridLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>